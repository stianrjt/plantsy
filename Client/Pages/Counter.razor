@page "/counter"

<MudText Typo="Typo.h1">Counter</MudText>

<MudText Typo="Typo.h5">Current count: @currentCount</MudText>


<MudFab Color="Color.Primary" @onclick="IncrementCount" Icon="@Icons.Material.Filled.Add" />


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
